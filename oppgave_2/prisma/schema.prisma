generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id          String        @id @default(cuid())
  userId      String        @unique
  gender      String
  sportType   String
  meta        Meta[]
  competition Competition[]
  goal        Goal[]
}

model Meta {
  id        String   @id @default(cuid())
  athleteId String
  heartRate Int
  athlete   Athlete  @relation(fields: [athleteId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Competition {
  id              String   @id @default(cuid())
  date            DateTime
  location        String
  competitionGoal String
  priority        String
  comment         String
  athleteId       String
  athlete         Athlete  @relation(fields: [athleteId], references: [id], onDelete: Cascade)
}

model Goal {
  id         String   @id @default(cuid())
  name       String
  date       DateTime
  goalTarget Int
  comment    String
  athleteId  String
  athlete    Athlete  @relation(fields: [athleteId], references: [id], onDelete: Cascade)
}

model Question {
  id         String   @id @default(cuid())
  text       String
  type       String
}