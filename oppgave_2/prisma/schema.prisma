generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Athlete {
  id          String        @id @default(cuid())
  userId      String        @unique
  gender      String
  sportType   String
  goal        Goal[]
  sessions    Session[]
}

model Goal {
  id         String   @id @default(cuid())
  name       String
  date       DateTime
  goalTarget Int
  comment    String
  athleteId  String
  athlete    Athlete  @relation(fields: [athleteId], references: [id], onDelete: Cascade)
}

model Question {
  id         String   @id @default(cuid())
  text       String
  type       String
}

model Session {
  id             String        @id @default(cuid())
  date           DateTime
  name           String
  tags           String
  sportType      String
  athleteId      String
  athlete        Athlete       @relation(fields: [athleteId], references: [id])
}

